<UserControl
    x:Class="GenmCloud.Storage.Views.StorageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attach="clr-namespace:Genm.WPF.Attach;assembly=Genm.WPF"
    xmlns:child="clr-namespace:GenmCloud.Storage.Views.ChildView"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:genm="clr-namespace:Genm.WPF.Controls;assembly=Genm.WPF"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:GenmCloud.Storage.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:storageCmd="clr-namespace:GenmCloud.Storage.Cmd"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:token="clr-namespace:GenmCloud.Core.Data.Token;assembly=GenmCloud.Core"
    xmlns:uc="clr-namespace:GenmCloud.Core.UserControls.Common.Views;assembly=GenmCloud.Core"
    x:Name="storageView"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style
            x:Key="cloudTreeViewItemStyle"
            BasedOn="{StaticResource BaseStyle}"
            TargetType="{x:Type TreeViewItem}">
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#333f87" />
            <Setter Property="attach:IconFontElement.Color" Value="#aaafcd" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TreeViewItem}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition MinHeight="20" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Border
                                Name="Bd"
                                Padding="{TemplateBinding Padding}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{Binding Path=(hc:BorderElement.CornerRadius), RelativeSource={RelativeSource TemplatedParent}}"
                                SnapsToDevicePixels="true">
                                <DockPanel Margin="{Binding Converter={StaticResource TreeViewItemMarginConverter}, RelativeSource={RelativeSource TemplatedParent}}" LastChildFill="True">
                                    <ToggleButton
                                        x:Name="Expander"
                                        Margin="20,0,0,0"
                                        ClickMode="Press"
                                        IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}">
                                        <ToggleButton.Style>
                                            <Style TargetType="{x:Type ToggleButton}">
                                                <Setter Property="Focusable" Value="False" />
                                                <Setter Property="Width" Value="16" />
                                                <Setter Property="Height" Value="16" />
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type ToggleButton}">
                                                            <Border
                                                                Width="16"
                                                                Height="16"
                                                                Background="Transparent">
                                                                <TextBlock
                                                                    x:Name="arrowText"
                                                                    VerticalAlignment="Center"
                                                                    Cursor="Hand"
                                                                    FontFamily="{StaticResource MenuIconFontFamily}"
                                                                    FontSize="14"
                                                                    Foreground="#7780af"
                                                                    Text="&#xe645;" />
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsChecked" Value="True">
                                                                    <Setter TargetName="arrowText" Property="Text" Value="&#xe646;" />
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ToggleButton.Style>
                                    </ToggleButton>
                                    <ContentPresenter
                                        Name="PART_Header"
                                        VerticalAlignment="Center"
                                        ContentSource="Header"
                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                </DockPanel>
                            </Border>
                            <ItemsPresenter x:Name="ItemsHost" Grid.Row="1" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger SourceName="Bd" Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FFEFF0F1" />
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                            <Trigger Property="IsExpanded" Value="False">
                                <Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed" />
                            </Trigger>
                            <Trigger Property="HasItems" Value="False">
                                <Setter TargetName="Expander" Property="Visibility" Value="Hidden" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}" />
                                <Setter Property="attach:IconFontElement.Color" Value="{StaticResource PrimaryBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <materialDesign:DialogHost
        Margin="0,-30,0,0"
        CloseOnClickAway="True"
        Identifier="StorageRoot"
        OverlayBackground="{StaticResource TMS_TransparencyRegionBrush}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Background="#f8f9fa">
                <Grid.RowDefinitions>
                    <RowDefinition Height="24" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Border
                    Grid.RowSpan="3"
                    BorderBrush="{StaticResource TMS_BorderBrush}"
                    BorderThickness="0,0,1,0" />
                <StackPanel Grid.Row="1">
                    <TextBlock
                        Margin="20,15,0,0"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="#030852"
                        Text="云存储" />
                    <TextBlock
                        Margin="20,15,0,0"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="{StaticResource PrimaryBrush}"
                        Text="我的文件" />
                </StackPanel>
                <hc:SimplePanel Grid.Row="2" Background="{StaticResource TMS_TransparencyRegionBrush}">
                    <hc:SimplePanel.ContextMenu>
                        <ContextMenu Width="150">
                            <MenuItem Command="{Binding AddNewFolderCmd}" Header="新建文件夹" />
                        </ContextMenu>
                    </hc:SimplePanel.ContextMenu>
                    <TreeView
                        Margin="0,15,0,0"
                        hc:BorderElement.CornerRadius="0"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#333f87"
                        ItemsSource="{Binding FileTreeNodeItemList}"
                        SelectedItemChanged="FolderItemChange"
                        Style="{StaticResource TreeViewBaseStyle}">
                        <TreeView.ItemContainerStyle>
                            <Style BasedOn="{StaticResource cloudTreeViewItemStyle}" TargetType="TreeViewItem" />
                        </TreeView.ItemContainerStyle>
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <StackPanel Height="40" Orientation="Horizontal">
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        FontFamily="{StaticResource MenuIconFontFamily}"
                                        FontSize="18"
                                        Foreground="{Binding Path=(attach:IconFontElement.Color), RelativeSource={RelativeSource AncestorType=TreeViewItem, Mode=FindAncestor}}"
                                        Text="&#xe638;" />
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=TreeViewItem, Mode=FindAncestor}}"
                                        Text="{Binding Folder.Name}" />
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </hc:SimplePanel>
            </Grid>
            <!--#region 右边区域-->
            <!--#region 内容区域-->
            <hc:SimplePanel
                Grid.Column="1"
                AllowDrop="True"
                Background="White"
                DragEnter="OnDragEnter"
                DragLeave="OnDragLeave"
                DragOver="OnDragOver"
                Drop="OnDrop">
                <hc:SimplePanel Margin="24,30,24,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <hc:SimplePanel VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Button Padding="4,0" Style="{StaticResource BackgroundBtnStyle}">
                                    <TextBlock
                                        FontSize="20"
                                        Foreground="#646a73"
                                        Text="共享空间" />
                                </Button>
                                <TextBlock
                                    Margin="12,0"
                                    VerticalAlignment="Center"
                                    FontSize="20"
                                    Foreground="#646a73"
                                    Text="&gt;" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="20"
                                    Foreground="#1f2329"
                                    Text="{Binding SelectedFolder.Name}" />
                            </StackPanel>
                            <hc:UniformSpacingPanel
                                HorizontalAlignment="Right"
                                Orientation="Horizontal"
                                Spacing="20">
                                <Button
                                    Width="90"
                                    Content="添加"
                                    Cursor="Hand"
                                    FontSize="14">
                                    <Button.Style>
                                        <Style BasedOn="{StaticResource ButtonDashedPrimary}" TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#e1eaff" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button
                                    Width="90"
                                    Cursor="Hand"
                                    FontSize="14"
                                    Style="{StaticResource ButtonPrimary}">
                                    <WrapPanel>
                                        <TextBlock VerticalAlignment="Center" Text="上传" />
                                        <TextBlock
                                            Margin="4,0,0,0"
                                            VerticalAlignment="Center"
                                            FontFamily="{StaticResource FIconFontFamily}"
                                            FontSize="8"
                                            Text="&#xe6bb;" />
                                    </WrapPanel>
                                </Button>
                            </hc:UniformSpacingPanel>
                        </hc:SimplePanel>
                        <hc:SimplePanel Grid.Row="1">
                            <Grid x:Name="mainGrid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition MaxWidth="220" />
                                </Grid.ColumnDefinitions>
                                <!--#region 文件列表视图-->
                                <hc:SimplePanel Grid.Column="0">
                                    <child:FileListView />
                                </hc:SimplePanel>
                                <hc:SimplePanel Grid.Column="1" Margin="20,0,0,0">
                                    <child:DetailInfoView />
                                </hc:SimplePanel>
                                <!--#endregion-->
                            </Grid>
                        </hc:SimplePanel>
                    </Grid>
                </hc:SimplePanel>
                <!--#endregion-->

                <!--#region 上传列表Popup-->
                <uc:UploadInfoPopup
                    Margin="0,0,20,20"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom" />
                <!--#endregion-->

                <!--#region 上传蒙版区域-->
                <hc:SimplePanel
                    x:Name="fileDragMask"
                    Opacity="0"
                    Visibility="Collapsed">
                    <hc:SimplePanel.Style>
                        <Style TargetType="hc:SimplePanel">
                            <Style.Triggers>
                                <Trigger Property="Visibility" Value="Visible">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                                                    Storyboard.TargetProperty="Opacity"
                                                    To="1"
                                                    Duration="0:0:0.1" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                                                    Storyboard.TargetProperty="Opacity"
                                                    To="0"
                                                    Duration="0:0:0.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </hc:SimplePanel.Style>
                    <hc:DashedBorder
                        Margin="20,30"
                        hc:BorderElement.CornerRadius="8"
                        Background="#CFFFFFFF"
                        BorderBrush="{StaticResource PrimaryBrush}"
                        BorderDashArray="3,2"
                        BorderThickness="1"
                        CornerRadius="8" />
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image
                            Width="300"
                            Height="300"
                            Margin="0,0,23,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Source="pack://application:,,,/GenmCloud.Core;component/Resources/Images/recruitment.png" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="18"
                            FontWeight="Bold"
                            Text="上传您的文件" />
                        <StackPanel
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                Foreground="{StaticResource SecondaryTextBrush}"
                                Text="将会上传到 " />
                            <TextBlock
                                VerticalAlignment="Center"
                                Foreground="#1890ff"
                                Text="{Binding SelectedFolder.Name}" />
                            <TextBlock Foreground="{StaticResource SecondaryTextBrush}" Text=" 中" />
                        </StackPanel>
                    </StackPanel>
                </hc:SimplePanel>
                <!--#endregion-->
            </hc:SimplePanel>
            <!--#endregion-->

        </Grid>
    </materialDesign:DialogHost>
</UserControl>
